<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. #1976d2-->
        <item name="android:windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">#1976d2</item>
        <item name="colorPrimaryDark">#004ba0</item>
        <item name="colorAccent">#29b6f6</item>
        <item name="colorSecondary">#5076d2</item>
        <item name="android:titleTextAppearance" tools:targetApi="lollipop">@style/ActionBarTextAppearance</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ActionBarTextAppearance" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/opensans_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomChip" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipStrokeColor">@color/browser_actions_divider_color</item>
        <item name="chipBackgroundColor">@android:color/white</item>
        <item name="chipCornerRadius">24dp</item>
        <item name="android:textSize">20sp</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="android:checkable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="quiz_button">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/edit_text_rounded_corners</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginEnd">40dp</item>
        <item name="android:layout_marginBottom">8dp</item>

        <item name="android:padding">12dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="quizChip" parent="@style/Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">@android:color/white</item>
        <item name="chipCornerRadius">24dp</item>
        <item name="android:textSize">20sp</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">@color/text_color</item>
        <item name="android:checkable">true</item>
        <item name="android:focusable">true</item>
    </style>
</resources>
