<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <LinearLayout
        android:id="@+id/exercise_title_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/quiz_header_box"
        android:padding="20dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_exercise_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:fontFamily="@font/opensans_bold"
            android:text="Exercise Title"
            android:textAlignment="center"
            android:textSize="20sp" />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/exercise_body_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/quiz_body_box"
            android:padding="20dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_exercise_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:fontFamily="@font/crimson_regular"
                android:text="Which thing is alive?"
                android:textAlignment="center"
                android:layout_marginBottom="16dp"
                android:textSize="20sp" />
            <EditText
                android:id="@+id/edt_exercise_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textLongMessage|textMultiLine"
                android:focusedByDefault="true"
                android:lines="50"
                android:textSize="16sp"
                android:minLines="5"
                android:scrollHorizontally="true"
                android:scrollbars="vertical" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>